void yellow(int i) {
	if (i == 0) {
		digitalWrite(3, 1);
		digitalWrite(6, 1);
		digitalWrite(2, 0);
		digitalWrite(7, 0);
		digitalWrite(1, 1);
	} else if (i == 1) {
		digitalWrite(12, 1);
		digitalWrite(6, 1);
		digitalWrite(1, 0);
		digitalWrite(5, 0);
		digitalWrite(4, 1);
	} else if (i == 2) {
		digitalWrite(12, 1);
		digitalWrite(3, 1);
		digitalWrite(8, 0);
		digitalWrite(4, 0);
		digitalWrite(7, 1);
	}
}

