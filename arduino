		digitalWrite(3, 0);
		digitalWrite(6, 0);
		digitalWrite(5, 0);
		digitalWrite(12, 0);
		digitalWrite(8, 0);
	} else if (i == 1) {
		digitalWrite(4, 1);
		digitalWrite(5, 1);
